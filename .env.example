# Copy this to .env and fill in your values

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id
# Comma-separated Telegram user IDs who can run admin commands anywhere
# Example: your user ID (default hardcoded admin is 1571540653; add more here if needed)
TELEGRAM_ADMIN_USER_IDS=1571540653
TELEGRAM_MAX_RPS=15
TELEGRAM_PER_CHAT_RPS=1.0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_key_here

# FX API Configuration
FX_API_KEY=your_fx_api_key_here
FX_API_BASE_URL=https://api.exchangerate-api.com/v4/latest/

# Database Configuration
DB_PATH=data/surebet.db

# Directory Paths
SCREENSHOT_DIR=data/screenshots
EXPORT_DIR=data/exports
LOG_DIR=data/logs

# Logging Configuration
LOG_LEVEL=INFO

# Feature Flags
STAKE_AT_PLACEMENT=false
